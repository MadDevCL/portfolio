---
import type { boolean } from "astro/zod";

interface Props {
  title: string;
  to: string;
  last?: boolean;
}

const { title, to, last } = Astro.props;
---

<a
  href={to}
  class={`bg-[#1C1C33] w-[130px] col-span-${last ? "12" : "6"} mx-auto md:mx-0 text-center text-white border border-principal rounded px-5 py-1 font-montserrat md:mr-12 mb-2 md:mb-0`}
  >{title}</a
>
