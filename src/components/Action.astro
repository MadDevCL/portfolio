---
interface Props {
  title: string;
  to: string;
  last?: boolean;
  type?: "primary" | "secondary";
  target?: "_self" | "_blank" | "_parent" | "_top";
}

const { title, to, last, type = "primary", target = "_self" } = Astro.props;
---

<a
  href={to}
  target={target}
  class={`bg-${type === "primary" ? "[#1C1C33]" : "transparent"} w-[130px] ${last && "col-span-2 md:mr-0"} mx-auto md:mx-0 text-center text-white border border-principal rounded px-5 py-1 font-montserrat md:mr-0 lg:mr-4 mb-2 md:mb-0`}
  >{title}</a
>
