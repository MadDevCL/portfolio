---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="md:col-span-2 lg:col-span-1">
  <div class="bg-[#f7fafc] px-4 py-0 rounded-lg mr-2 content-center">
    <p class="text-xs font-black text-center font-montserrat text-black">
      {title}
    </p>
  </div>
</div>
